
<% Product.all.each do |product| %>
  <%= render partial: "product", locals: {product: product} %>
<% end %>


<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    let id = $(this).data("id");
    $.get("/description/" + id , function(data) {
          $("#body-" + id).append(data)
    });
  });
});
</script>
